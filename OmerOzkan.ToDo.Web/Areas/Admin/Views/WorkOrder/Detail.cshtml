@model DutyListDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Detaylandir</h1>

@if (Model.Reports.Count > 0)
{
    <a asp-action="GetExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-light my-2 mr-2"><i class="fas fa-file-excel mr-2"></i>Excel</a>
    <a asp-action="GetPdf" asp-route-id="@Model.Id" target="_blank" class="btn btn-light my-2 mr-2"><i class="fas fa-file-pdf mr-2"></i>Pdf</a>
    <table class="table table-hover table-sm mt-2 text-center table-bordered">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.SurName personelinizin @Model.Name görevine yazmış olduğu raporlar </th>
        </tr>
        <tr>
            <th>Tanim</th>
            <th>Detay</th>
        </tr>

        @foreach (var rapor in Model.Reports)
        {
            <tr>
                <td>@rapor.Description</td>
                <td>@rapor.Detail</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.SurName personeliniz şuan da @Model.Name görevi üzerinde çalışıyor.Henüz bir rapor yazmamış.
    </div>
}

